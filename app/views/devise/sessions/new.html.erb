<h5 class="pb-4">Google Cloud Text to Speech onRails Pro</h5>
  <div class="card mx-3 mt-n5 shadow-lg" style="border-radius: 10px; border-left:8px #007bff solid; border-right: none; border-top:none; border-bottom:none">
    <div class="card-body">
      <h4 class="card-title mb-3 text-primary text-uppercase">Log in</h4>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col">
            <div class="form-floating mb-3">
              <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control" } %>
            </div>
          </div>
          <div class="col">
            <div class="form-floating mb-3">
              <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "form-control" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>
        </div>
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
          <% end %>
          <div class="mt-3" >
          <%= render "devise/shared/links" %>
          </div>
    </div>
  </div>
